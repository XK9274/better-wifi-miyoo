#compdef configure config.status

_arguments -- -i '(--(disable|enable)-FEATURE* --(with|without)-PACKAGE*)' \
              -s '((#s)--disable- --enable-
	           (#s)--enable- --disable-
		   (#s)--with- --without-
		   (#s)--without- --with-)' \
	      '*=(E|)PREFIX*:prefix directory:_files -/' \
              '*=PROGRAM*:program:_command_names -e' \
	      '*=NAME*executable*:program:_command_names -e' \
	      '*=NAME*:file:_files'
